CalculatorRoot:

<CalculatorRoot>
    orientation: "vertical"
    BoxLayout:
        height: "80dp"
        size_hint_y: None
        TextInput:
            id: input
            multiline: False
            font_size: 35
    GridLayout:
        rows: 6
        cols: 4
        Button:
            text: "CE"
        Button:
            text: "C"
        Button:
            text: "Backspace"
        Button:
            text: "/"
        Button:
            text: "7"
        Button:
            text: "8"
        Button:
            text: "9"
        Button:
            text: "X"
        Button:
            text: "4"
        Button:
            text: "5"
        Button:
            text: "6"
        Button:
            text: "-"
        Button:
            text: "1"
        Button:
            text: "2"
        Button:
            text: "3"
        Button:
            text: "+"
        Button:
            text: "+-"
        Button:
            text: "0"
        Button:
            text: ","
        Button:
            id: compute
            text: "="

