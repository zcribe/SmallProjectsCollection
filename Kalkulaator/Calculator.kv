CalculatorRoot:

<CalculatorRoot>
    orientation: "vertical"
    BoxLayout:
        height: "200dp"
        size_hint_y: None
        Label:
            id: screen
            text: root.expression
            font_size: 100
    GridLayout:
        rows: 6
        cols: 4
        Button:
            text: "CE"
            on_press: root.expression = ""
        Button:
            text: "C"
            on_press: root.expression = ""
        Button:
            text: "Backspace"
            on_press: root.expression = screen.text[:-1]
        Button:
            text: "/"
            on_press: root.expression += self.text
        Button:
            text: "7"
            on_press: root.expression += self.text
        Button:
            text: "8"
            on_press: root.expression += self.text
        Button:
            text: "9"
            on_press: root.expression += self.text
        Button:
            text: "*"
            on_press: root.expression += self.text
        Button:
            text: "4"
            on_press: root.expression += self.text
        Button:
            text: "5"
            on_press: root.expression += self.text
        Button:
            text: "6"
            on_press: root.expression += self.text
        Button:
            text: "-"
            on_press: root.expression += self.text
        Button:
            text: "1"
            on_press: root.expression += self.text
        Button:
            text: "2"
            on_press: root.expression += self.text
        Button:
            text: "3"
            on_press: root.expression += self.text
        Button:
            text: "+"
            on_press: root.expression += self.text
        Button:
            text: "+-"
        Button:
            text: "0"
            on_press: root.expression += self.text
        Button:
            text: ","
            on_press: root.expression += self.text
        Button:
            id: compute
            text: "="
            on_press: root._evaluate(screen.text)

